<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="ConvenienceStore.Views.InventoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConvenienceStore.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ConvenienceStore.Models"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Quản lý kho hàng" 
                   Style="{StaticResource HeaderTextBlockStyle}"
                   Margin="0,0,0,20"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Categories List -->
            <ListView x:ConnectionId='2' x:Name="CategoryList"
                                                                        
                                                                
                BorderThickness="1"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                Margin="0,0,20,0">
                <ListView.Header>
                    <TextBlock Text="Danh mục sản phẩm" 
                             Style="{StaticResource SubtitleTextBlockStyle}"
                             Margin="10"/>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate                             >
                        <TextBlock x:ConnectionId='5'                              Padding="5"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Products DataGrid -->
            <controls:DataGrid x:ConnectionId='3'
                Grid.Column="1"
                x:Name="ProductsDataGrid"
                                                                      
                                                                              
                AutoGenerateColumns="False"
                IsReadOnly="True"
                GridLinesVisibility="All"
                AlternatingRowBackground="{ThemeResource SystemControlAltMediumLowAcrylicElementMediumBrush}">
                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn Header="Mã SP" 
                                               Binding="{Binding ProductID}"/>
                    <controls:DataGridTextColumn Header="Tên sản phẩm" 
                                               Binding="{Binding ProductName}"/>
                    <controls:DataGridTextColumn Header="Thương hiệu" 
                                               Binding="{Binding Brand}"/>
                    <controls:DataGridTextColumn Header="Số lượng" 
                                               Binding="{Binding QuantityInStock}"/>
                    <controls:DataGridTextColumn Header="Mức tồn tối thiểu" 
                                               Binding="{Binding ReorderLevel}"/>
                    <controls:DataGridTextColumn Header="Giá" 
                                               Binding="{Binding Price}"/>
                    <controls:DataGridTextColumn Header="Danh mục" 
                                               Binding="{Binding Category.CategoryName}"/>
                </controls:DataGrid.Columns>
            </controls:DataGrid>
        </Grid>
    </Grid>
</Page>

