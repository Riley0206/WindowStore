<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="ConvenienceStore.Views.InventoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConvenienceStore.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ConvenienceStore.Models"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:converters="using:ConvenienceStore.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- Định nghĩa converter -->
    <Page.Resources>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Quản lý kho hàng" 
                   Style="{StaticResource HeaderTextBlockStyle}"
                   Margin="0,0,0,20"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Categories List -->
            <ListView x:ConnectionId='2' x:Name="CategoryList"
                                                                        
                                                                
                BorderThickness="1"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                Margin="0,0,20,0">
                <ListView.Header>
                    <TextBlock Text="Danh mục sản phẩm" 
                             Style="{StaticResource SubtitleTextBlockStyle}"
                             Margin="10"/>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate                             >
                        <TextBlock x:ConnectionId='14'                              Padding="5"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Products DataGrid and Buttons -->
            <StackPanel Grid.Column="1">
                <!-- Search Box -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                    <TextBox x:ConnectionId='11' x:Name="SearchBox" Width="200" PlaceholderText="Tìm kiếm sản phẩm..."/>
                    <Button x:ConnectionId='12' Content="Tìm kiếm"                            Margin="5,0,0,0"/>
                </StackPanel>

                <!-- Add and Update Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                    <Button x:ConnectionId='8' Content="Thêm sản phẩm mới"                          Margin="0,0,10,0"/>
                    <Button x:ConnectionId='9' Content="Cập nhật số lượng"                              Margin="0,0,10,0"/>
                    <Button x:ConnectionId='10' Content="Xóa sản phẩm"                             Margin="0,0,10,0"/>
                </StackPanel>

                <!-- Products DataGrid -->
                <controls:DataGrid x:ConnectionId='3'
                    x:Name="ProductsDataGrid"
                                                                                   
                                                                                  
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    GridLinesVisibility="All"
                    AlternatingRowBackground="{ThemeResource SystemControlAltMediumLowAcrylicElementMediumBrush}">
                    <controls:DataGrid.Columns>
                        <controls:DataGridTextColumn Header="Mã SP" Binding="{Binding ProductID}"/>
                        <controls:DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding ProductName}"/>
                        <controls:DataGridTextColumn Header="Thương hiệu" Binding="{Binding Brand}"/>
                        <controls:DataGridTextColumn Header="Danh mục" Binding="{Binding Category.CategoryName}"/>
                        <controls:DataGridTextColumn Header="Số lượng tồn" Binding="{Binding QuantityInStock}"/>
                        <controls:DataGridTextColumn Header="Đơn vị" Binding="{Binding Unit}"/>
                        <controls:DataGridTextColumn Header="Giá bán">
                            <controls:DataGridTextColumn.Binding>
                                <Binding Path="Price" Converter="{StaticResource CurrencyConverter}"/>
                            </controls:DataGridTextColumn.Binding>
                        </controls:DataGridTextColumn>
                        <controls:DataGridTextColumn Header="Giá vốn">
                            <controls:DataGridTextColumn.Binding>
                                <Binding Path="CostPrice" Converter="{StaticResource CurrencyConverter}"/>
                            </controls:DataGridTextColumn.Binding>
                        </controls:DataGridTextColumn>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>

                <!-- Pagination Controls -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Spacing="10">
                    <Button x:ConnectionId='4' Content="Trang trước"
                                                                        
                                                                                   />

                    <TextBlock VerticalAlignment="Center">
                        <Run Text="Trang "/>
                        <Run x:ConnectionId='6'                                                   />
                        <Run Text=" / "/>
                        <Run x:ConnectionId='7'                                                  />
                    </TextBlock>

                    <Button x:ConnectionId='5' Content="Trang sau"
                                                                    
                                                                               />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

